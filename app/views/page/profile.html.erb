<h1>Profile Page</h1>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this user from being saved:</h2>

    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_for(@user, url: '/profile') do |f| %>
  <div>
    <%= f.text_field :name, placeholder: "name", required: true %>
  </div>
  <div>
    <%= f.email_field :email, placeholder: "email", required: true, readonly: true %>
  </div>
  <div>
    <%= f.password_field :password, placeholder: "password", required: true %>
  </div>
  <div>
    <%= f.password_field :password_confirmation, placeholder: "password_confirmation", required: true %>
  </div>
  <div>
    <button type="submit">Update Profile</button>
  </div>
<% end %>
<a href="/log_out">Log Out</a>